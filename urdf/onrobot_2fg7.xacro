<?xml version="1.0" ?>
<robot name="onrobot_2fg7"
  xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find onrobot_2fg7_description)/urdf/materials.xacro" />

  <xacro:macro name="onrobot_2fg7" params="prefix parent *origin">

    <link name="${prefix}base_link">
      <inertial>
        <origin xyz="-4.898915958379213e-05 2.84756960271082e-06 0.06811082379774974" rpy="0 0 0"/>
        <mass value="1.2646523179240972"/>
        <inertia ixx="0.001504" iyy="0.001812" izz="0.001053" ixy="-0.0" iyz="0.0" ixz="-3e-06"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://onrobot_2fg7_description/meshes/base_link.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="silver"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://onrobot_2fg7_description/meshes/base_link.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>
    </link>

    <link name="${prefix}right_attachment"></link>

    <link name="${prefix}left_attachment"></link>

    <joint name="${prefix}gripper_joint" type="prismatic">
      <origin xyz="0.0 0.0 0.12005" rpy="0 0 0"/>
      <parent link="${prefix}base_link"/>
      <child link="${prefix}left_attachment"/>
      <axis xyz="-1.0 0.0 0.0"/>
      <limit lower="0.0115" upper="0.0305" effort="140" velocity="0.45"/>
      <!-- total 0.38 -->
    </joint>

    <joint name="${prefix}right_finger_joint" type="prismatic">
      <origin xyz="0.0 0.0 0.12005" rpy="0 0 0"/>
      <parent link="${prefix}base_link"/>
      <child link="${prefix}right_attachment"/>
      <axis xyz="1.0 0.0 0.0"/>
      <limit lower="-0.0115" upper="-0.0305" effort="140" velocity="0.45"/>
      <mimic joint="${prefix}gripper_joint" multiplier="1.0"/>
    </joint>

    <joint name="${prefix}2fg7_attach_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="${prefix}base_link"/>
      <xacro:insert_block name="origin"/>
      <axis xyz="0 0 1"/>
    </joint>
  </xacro:macro>


  <xacro:macro name="onrobot_2fg7_fingertip" params="prefix parent *origin">

    <link name="${prefix}onrobot_2fg7_finger_link">
      <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
        <mass value="0.023219383355922288"/>
        <inertia ixx="6e-06" iyy="5e-06" izz="2e-06" ixy="-0.0" iyz="-0.0" ixz="1e-06"/>
      </inertial>
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://onrobot_2fg7_description/meshes/finger_link.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="silver"/>
      </visual>
      <collision name="right_finger_collision">
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://onrobot_2fg7_description/meshes/finger_link.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>
    </link>

    <joint name="${prefix}onrobot_2fg7_fingertip_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="${prefix}onrobot_2fg7_finger_link"/>
      <xacro:insert_block name="origin"/>
      <axis xyz="0 0 1"/>
    </joint>

